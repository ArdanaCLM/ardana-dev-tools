interface {{ net_rc | replace('\'','') }}
{
AdvSendAdvert {{ radvd_AdvSendAdvert }};
MinRtrAdvInterval {{ radvd_MinRtrAdvInterval }};
MaxRtrAdvInterval {{ radvd_MaxRtrAdvInterval }};
AdvManagedFlag {{ radvd_AdvManagedFlag }};
AdvOtherConfigFlag {{ radvd_AdvOtherConfigFlag }};
prefix {{ ipv6_net_prefix[loop.index0] | replace('\'','') }}/{{ ipv6_net_prefix_len[loop.index0] | replace('\'','') }}
{
  AdvOnLink {{ radvd_AdvOnLink }};
  AdvAutonomous {{ radvd_AdvAutonomous }};
  AdvRouterAddr {{ radvd_AdvRouterAddr }};
};
};
{% endfor %}
